<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - GameStores</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', sans-serif;
        }

        #banner {
            text-align:center;
            background: linear-gradient(to right, #2c3e50, #3498db);
            color: white;
            font-size: 1.8rem;
            font-weight: bold;
            padding: 15px 30px;
            position: sticky;
            top: 0;
            z-index: 999;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        #menu {
          
            background-color: #ffffff;
            border-bottom: 1px solid #ddd;
            padding: 10px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

            #menu .nav-links a {
                
                text-decoration: none;
                color: #2c3e50;
                margin-right: 15px;
                font-weight: 500;
                transition: 0.3s;
            }

                #menu .nav-links a:hover {
                    color: #007bff;
                }

            #menu hr {
                margin-top: 10px;
                border-top: 1px solid #3498db;
            }

        .content-container {
            padding: 30px;
        }
    </style>
</head>
<body>
    <div id="banner">🎮 GameStores</div>


    <div id="menu">
        <div class="nav-links">
            @Html.ActionLink("Giới thiệu", "GioiThieu_64130855", "UnUsers_64130855", null, new { @class = "a" })
            @Html.ActionLink("Cửa hàng", "Index", "UnUsers_64130855")
            @Html.ActionLink("Hỗ Trợ", "Support", "UnUsers_64130855")

        </div>
        <div class="nav-links ms-auto">
            @Html.ActionLink("Đăng nhập", "Login", "Account_64130855")
            @Html.ActionLink("Đăng ký", "Register", "Account_64130855")
        </div>
    </div>

    <div class="content-container">
        @RenderBody()
    </div>
</body>
</html>
