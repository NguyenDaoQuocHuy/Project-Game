@* _AdminLayout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />


    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- FontAwesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            min-height: 100vh;
            overflow-x: hidden;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(to right, #f8f9fa, #ffffff);
        }
        #banner {
            text-align: center;
            background: linear-gradient(to right, #2c3e50, #3498db);
            color: white;
            font-size: 1.8rem;
            font-weight: bold;
            padding: 15px 30px;
            position: sticky;
            top: 0;
            z-index: 999;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .sidebar {
            min-width: 250px;
            max-width: 250px;
            background: linear-gradient(to bottom, #ffffff, #f8f9fa);
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0,0,0,0.1);
            color: #2c3e50;
            transition: all 0.3s;
            margin: 20px;
            padding-top: 20px;
        }

            .sidebar.collapsed {
                min-width: 80px;
                max-width: 80px;
            }

            .sidebar .nav-link {
                color: #2c3e50;
                font-weight: 600;
                padding: 15px 20px;
                white-space: nowrap;
                border-radius: 8px;
                margin: 5px 10px;
                transition: background-color 0.3s, color 0.3s;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background: #3498db;
                    color: white;
                    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
                }

                .sidebar .nav-link i {
                    margin-right: 12px;
                    font-size: 18px;
                    width: 22px;
                    text-align: center;
                }

            .sidebar.collapsed .nav-link span {
                display: none;
            }

            .sidebar .sidebar-header {
                padding: 20px;
                font-size: 1.6rem;
                font-weight: 700;
                color: #3498db;
                text-align: center;
                margin-bottom: 15px;
            }

        .content {
            flex: 1;
            background: linear-gradient(to right, #ffffff, #f8f9fa);
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0,0,0,0.1);
            margin: 20px;
            padding: 30px;
            color: #444;
        }

        .navbar-toggler {
            background-color: #3498db;
            border: none;
        }

            .navbar-toggler:focus {
                box-shadow: none;
            }

        .navbar {
            background: white;
            box-shadow: 0 4px 16px rgba(0,0,0,0.05);
        }

    </style>
</head>
<body>
    <div id="banner">🎮 GameStores</div>
    <div class="d-flex">
        <nav id="sidebar" class="sidebar d-flex flex-column">
            <div class="sidebar-header">
                <span>Admin Panel</span>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a href="@Url.Action("Dashboard", "Games_64130855")" class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Dashboard" ? "active" : "")" title="Dashboard">
                        <i class="fas fa-tachometer-alt"></i><span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("QlyUser", "Games_64130855")" class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "QlyUser" ? "active" : "")" title="Quản lý Users">
                        <i class="fas fa-users"></i><span>Quản lý Users</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("QlyCategories", "Games_64130855")" class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "QlyCategories" ? "active" : "")" title="Quản lý Categories">
                        <i class="fas fa-list"></i><span>Quản lý Categories</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("QlyGames", "Games_64130855")" class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "QlyGames" ? "active" : "")" title="Quản lý Games">
                        <i class="fas fa-gamepad"></i><span>Quản lý Games</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Order", "Games_64130855")" class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Order" ? "active" : "")" title="Quản lý Orders">
                        <i class="fas fa-shopping-cart"></i><span>Quản lý Orders</span>
                    </a>
                </li>
                <li class="nav-item mt-auto">
                    <a href="@Url.Action("GIOITHIEU_64130855","UnUsers_64130855")" class="nav-link text-danger" title="Đăng xuất">
                        <i class="fas fa-sign-out-alt"></i><span>Đăng xuất</span>
                    </a>
                </li>
            </ul>
        </nav>



        <main class="content">
            @RenderBody()
        </main>

    </div>

    <!-- Bootstrap 5 JS bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const sidebar = document.getElementById('sidebar');
        const toggleBtn = document.getElementById('sidebarToggle');
        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
        });
    </script>
</body>
</html>
