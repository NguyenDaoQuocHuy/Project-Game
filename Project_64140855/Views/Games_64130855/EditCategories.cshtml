@model Project_64140855.Models.Category

@{
    ViewBag.Title = "Thêm mới danh mục";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .card-header {
        background-color: mediumblue; /* Xanh dương đậm hơn */
        color: white;
        border-top-left-radius: 1.5rem;
        border-top-right-radius: 1.5rem;
        padding: 1rem 1.5rem;
        text-align: center;
    }

    .card {
        border: none;
        border-radius: 1.5rem;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    .form-control,
    .form-select {
        border-radius: 0.5rem;
        transition: all 0.3s ease;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #003366;
            box-shadow: 0 0 0 0.2rem rgba(0, 51, 102, 0.25);
        }

    .btn-success {
        border-radius: 0.5rem;
        font-weight: 600;
        padding: 0.6rem 1.2rem;
        transition: background-color 0.3s ease;
    }

        .btn-success:hover {
            background-color: #218838;
        }
</style>

<div class="container mt-4">
    <div class="card shadow rounded-lg" style="max-width: 600px; margin: auto;">
        <div class="card-header">
            <h4 class="mb-0">Chỉnh sửa danh mục</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("CreateCategories", "Games_64130855", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.CategoryName, "Tên danh mục", new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control", placeholder = "Nhập tên danh mục..." })
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                    <a href="@Url.Action("QlyCategories")" class="btn btn-outline-secondary ms-2">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            }
        </div>
    </div>
</div>
