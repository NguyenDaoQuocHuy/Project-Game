@model Project_64140855.Models.User
@{
    ViewBag.Title = "Tạo người dùng mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mb-4 text-center">🧑‍💼 Thêm người dùng mới</h2>

<div class="card shadow p-4 mx-auto" style="max-width: 600px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.FullName, "Họ và tên", new { @class = "fw-bold" })
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @placeholder = "Nhập họ tên đầy đủ" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.UserName, "Tên đăng nhập", new { @class = "fw-bold" })
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Nhập tên đăng nhập" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Email, "Địa chỉ email", new { @class = "fw-bold" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Nhập địa chỉ email" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Password, "Mật khẩu", new { @class = "fw-bold" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Nhập mật khẩu" })
        </div>

        <div class="form-group mb-4">
            @Html.LabelFor(m => m.Role, "Vai trò", new { @class = "fw-bold" })
            <div class="input-group">
                <span class="input-group-text">👤</span>
                @Html.DropDownListFor(m => m.Role,
                    new SelectList(new[] { "User", "Admin" }),
                    "Chọn vai trò",
                    new { @class = "form-select" })
            </div>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-primary px-4">
                Thêm người dùng
            </button>
        </div>
    }
</div>
