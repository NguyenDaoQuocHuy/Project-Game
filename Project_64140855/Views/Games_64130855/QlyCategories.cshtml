@model IEnumerable<Project_64140855.Models.Category>
@{
    ViewBag.Title = "Danh mục game";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    h2.text-primary {
        font-weight: 700;
    }

    .table thead {
        background-color: #343a40;
    }

    .table th, .table td {
        vertical-align: middle !important;
        padding: 0.75rem;
    }

    .table-hover tbody tr:hover {
        background-color: #f2f2f2;
    }

    .btn {
        border-radius: 0.4rem;
        font-weight: 500;
        transition: all 0.2s ease-in-out;
    }

    .btn-warning:hover {
        background-color: #e0a800;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c82333;
        color: white;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .card {
        border-radius: 1rem;
    }

    .table td {
        font-size: 1rem;
    }

    .no-data {
        font-style: italic;
        color: #888;
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3 ">
        <h2 class="text-dark">🎮 Danh mục game</h2>

        <a href="@Url.Action("CreateCategories", "Games_64130855")" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle"></i> Thêm danh mục
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="thead-dark text-white">
                    <tr>
                        <th style="width: 10%;">ID</th>
                        <th style="width: 60%;">Tên danh mục</th>
                        <th style="width: 30%;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cat in Model)
                    {
                        <tr>
                            <td>@cat.CategoryId</td>
                            <td>@cat.CategoryName</td>

                            <td>
                                <a href="@Url.Action("EditCategories", "Games_64130855", new { id = cat.CategoryId })"
                                   class="btn btn-sm btn-warning me-1">
                                    ✏️ Sửa
                                </a>
                                <a href="@Url.Action("DeleteCategories", "Games_64130855", new { id = cat.CategoryId })"
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Bạn có chắc muốn xóa danh mục này?');">
                                    🗑️ Xóa
                                </a>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center no-data">Không có danh mục nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
            <section aria-label="Page navigation" class="mt-3">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("QlyCategories", new { page = i, search = Request["search"]})">@i</a>
                        </li>

                    }
                </ul>
            </section>
        </div>
    </div>
</div>
