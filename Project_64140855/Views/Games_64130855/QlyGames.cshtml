@model IEnumerable<Project_64140855.Models.Game>
@{
    ViewBag.Title = "Quản lý Games";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    h2 {
        text-align: center;
        color: #2c3e50;
        font-size: 28px;
        font-weight: 700;
        margin-bottom: 30px;
    }

    form.form-inline {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;
        margin-bottom: 25px;
    }

        form.form-inline input,
        form.form-inline select {
            padding: 8px 12px;
            font-size: 15px;
            border: 1.5px solid #ccc;
            border-radius: 5px;
            min-width: 200px;
            transition: border-color 0.3s ease;
        }

            form.form-inline input:focus,
            form.form-inline select:focus {
                border-color: #2980b9;
                box-shadow: 0 0 5px rgba(41, 128, 185, 0.4);
                outline: none;
            }

        form.form-inline .btn {
            padding: 8px 16px;
            font-weight: 600;
            font-size: 15px;
            border-radius: 5px;
            border: none;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

    .btn-primary {
        background-color: #3498db;
    }

        .btn-primary:hover {
            background-color: #2c80b4;
        }

    .btn-success {
        background-color: #27ae60;
    }

        .btn-success:hover {
            background-color: #1e8449;
        }

    table.table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        border-radius: 8px;
        overflow: hidden;
    }

    table thead {
        background-color: #2980b9;
        color: white;
    }

    table th,
    table td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #eaeaea;
    }

    table tbody tr:hover {
        background-color: #f2f2f2;
    }

    table img {
        border-radius: 6px;
        max-width: 100px;
    }

    .btn-warning {
        background-color: #f39c12;
        color: white;
    }

        .btn-warning:hover {
            background-color: #d68910;
        }

    .btn-danger {
        background-color: #e74c3c;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c0392b;
        }

    td:last-child {
        white-space: nowrap;
    }
</style>

<h2>🎮 Quản lý Games</h2>

<form method="get" class="form-inline">
    <input type="text" name="search" placeholder="Tìm tên game..." value="@Request["search"]" />
    <select name="categoryId">
        <option value="">-- Tất cả thể loại --</option>
        @foreach (SelectListItem cat in ViewBag.Categories)
        {
            <option value="@cat.Value" @(Request["categoryId"] == cat.Value ? "selected" : "")>@cat.Text</option>
        }
    </select>
    <button type="submit" class="btn btn-primary">Tìm</button>
    <a href="@Url.Action("CreateGames")" class="btn btn-success">Thêm Game</a>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Giá</th>
            <th>Thể loại</th>
            <th>Ảnh</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@String.Format("{0:N0} đ", item.Price)</td>
                <td>@item.Category.CategoryName</td>
                <td><img src="@Url.Content("~/Images/" + item.ImageUrl)" /></td>
                <td>
                    <a href="@Url.Action("EditGames", new { id = item.GameId })" class="btn btn-sm btn-warning">Sửa</a>
                    <a href="@Url.Action("DeleteGames", new { id = item.GameId })" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa game này không?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<section aria-label="Page navigation" class="mt-3">
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" href="@Url.Action("QlyGames", new { page = i, search = Request["search"]})">@i</a>
            </li>                                                                    
        }                                                                
    </ul>
</section>
