@model Project_64140855.Models.Game

@{
    ViewBag.Title = "Xác nhận mua game";
    Layout = "~/Views/Shared/_Layoutcus.cshtml";
}

<div class="buy-now-container" style="max-width: 700px; margin: 40px auto; padding: 30px; background: #fff; border-radius: 12px; box-shadow: 0 5px 15px rgba(0,0,0,0.1);">
    <h2 style="font-size: 1.8rem; font-weight: 700; margin-bottom: 20px;">Xác nhận mua game</h2>

    <div class="game-summary" style="display: flex; gap: 20px; margin-bottom: 30px;">
        <img src="@Model.ImageUrl" alt="@Model.Title" style="width: 160px; border-radius: 10px;" />
        <div class="game-info" style="display: flex; flex-direction: column; justify-content: center;">
            <div><strong>🎮 Tên game:</strong> @Model.Title</div>
            <div><strong>💰 Giá:</strong> @Model.Price.ToString("N0") đ</div>
            <div><strong>📂 Thể loại:</strong> @(Model.Category == null ? "-" : Model.Category.CategoryName)</div>
        </div>
    </div>

    <form action="@Url.Action("ConfirmBuy", "Users_64130855")" method="post">
        <input type="hidden" name="gameId" value="@Model.GameId" />
        <input type="hidden" name="price" value="@Model.Price" />
        <input type="hidden" name="quantity" value="1" />
        <button type="submit" style="padding: 12px 25px; background-color: #27ae60; color: white; font-weight: bold; border: none; border-radius: 8px; font-size: 1rem;">✅ Xác nhận mua</button>
    </form>
</div>
