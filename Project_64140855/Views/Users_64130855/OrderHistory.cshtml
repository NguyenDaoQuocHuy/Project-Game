@model List<Project_64140855.Models.Order>

@{
    ViewBag.Title = "Lịch sử mua hàng";
    Layout = "~/Views/Shared/_Layoutcus.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary"><i class="bi bi-clock-history"></i> Lịch sử mua hàng</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info p-4 shadow-sm rounded">Bạn chưa có đơn hàng nào.</div>
    }
    else
    {
        foreach (var order in Model)
        {
            <div class="card mb-4 border-0 shadow-sm rounded-4">
                <div class="card-header bg-gradient bg-dark text-white rounded-top-4 d-flex justify-content-between align-items-center">
                    <div>
                        <i class="bi bi-receipt"></i> Đơn hàng #@order.OrderId
                        <span class="ms-3"><i class="bi bi-calendar-event"></i> @order.OrderDate.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                    <span class="badge bg-warning text-dark">@order.Status</span>
                </div>

                <div class="card-body bg-light">
                    <ul class="list-group list-group-flush">
                        @foreach (var item in order.OrderDetails)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center bg-white border-bottom">
                                <div>
                                    <strong>@item.Game.Title</strong><br />
                                    <small>Số lượng: @item.Quantity x @item.UnitPrice.ToString("N0")₫</small>
                                </div>
                                <span class="fw-bold text-success">
                                    @((item.Quantity * item.UnitPrice).ToString("N0"))₫
                                </span>
                            </li>
                        }
                    </ul>

                    <div class="mt-3 text-end">
                        <span class="fs-5 fw-bold">Tổng cộng: </span>
                        <span class="fs-5 text-danger fw-bold">@order.TotalAmount.ToString("N0")₫</span>
                    </div>
                </div>
            </div>
        }
    }
</div>
