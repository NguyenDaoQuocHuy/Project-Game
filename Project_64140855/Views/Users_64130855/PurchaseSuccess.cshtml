@{
    ViewBag.Title = "Thông báo mua hàng";
    Layout = "~/Views/Shared/_Layoutcus.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-success">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0 text-center">Xác nhận mua hàng</h4>
                </div>
                <div class="card-body text-center">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["Success"]
                        </div>

                        if (TempData["GameCode"] != null)
                        {
                            <div class="mt-3">
                                <strong>Mã kích hoạt game của bạn:</strong>
                                <div class="alert alert-info mt-2" style="font-size: 1.25rem; font-weight: bold;">
                                    @TempData["GameCode"]
                                </div>
                            </div>
                        }

                        <a href="@Url.Action("", "Users_64130855")" class="btn btn-primary mt-4">
                            Tiếp tục mua sắm
                        </a>
                    }
                    else
                    {
                        <div class="alert alert-warning" role="alert">
                            Không có thông báo nào để hiển thị.
                        </div>
                        <a href="@Url.Action("Index_2", "Users_64130855")" class="btn btn-secondary mt-3">
                            Quay lại cửa hàng
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
